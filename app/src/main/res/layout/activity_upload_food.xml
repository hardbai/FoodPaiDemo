<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.bai.com.foodpai.ui.UploadFoodActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_upload_food_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="上传食物"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="品牌"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_brand_id"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:hint="如薄荷"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="名称"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_name_id"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:hint="如超模25营养饮"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="别名"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_otherName_id"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:hint="如超模25不可填"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始上传"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_shape"
            android:onClick="finish"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
