<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.bai.com.foodpai.ui.WikiListActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/wiki_list_tb_id"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/wiki_list_title_id"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*****"/>
        <TextView
            android:id="@+id/wiki_list_sub_id"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/popup_switch_up_down"
            android:text="全部"/>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/wiki_list_line_tv_id"
        android:layout_below="@id/wiki_list_tb_id"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        />
    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/wiki_list_rl_id"
        android:layout_below="@id/wiki_list_line_tv_id"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wiki_list_order_tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营养素排序"
                android:drawableRight="@drawable/popup_switch_up_down"
                android:layout_margin="10dp"/>

            <TextView
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:id="@+id/wiki_list_changeorder_tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:text="调整排序"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/wiki_list_line2_tv_id"
        android:layout_below="@id/wiki_list_rl_id"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        />
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/wiki_list_lv_id"
        android:layout_below="@id/wiki_list_line2_tv_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.handmark.pulltorefresh.library.PullToRefreshListView>
</RelativeLayout>
