<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.bai.com.foodpai.ui.SearchActivity">
<android.support.v7.widget.Toolbar
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_toolbar">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:hint="请输入食物名称"
            android:textColor="#000000"
            android:layout_centerVertical="true">
        </EditText>
        <ImageView
            android:id="@+id/search_go"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_homepage_search"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"/>
           />

    </LinearLayout>
</android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/tv_history"
        android:background="#DDDDDD"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="最近搜过"/>
    <ListView
        android:id="@+id/search_history_lv"
        android:layout_below="@+id/tv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        ></ListView>
    <LinearLayout
        android:id="@+id/ll_clearHistory"
        android:layout_below="@+id/search_history_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trash"/>
        <TextView
            android:id="@+id/historyClear"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空历史纪录"/>
    </LinearLayout>
</RelativeLayout>
